<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NavBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorNavPrimaryDarkGray</item>
        <item name="colorAccent">@color/colorNavAccentGray</item>
    </style>

<!--    login-->
    <style name="CustomTextInputStyle">
<!--                <item name="boxStrokeColor">@color/text_input_box_stroke</item>-->
        <item name="colorControlNormal">@android:color/tertiary_text_dark</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="android:textColorHint">#ccc</item>
        <item name="errorTextColor">@color/colorTextErrorRed</item>
    </style>


<!--    for all white button-->
    <style name="CustomButtonWhite" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_white_gray_border</item>
    </style>
    <!--    for all green button-->
    <style name="CustomButtonGreen" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_green</item>
    </style>

<!--    for textinput layout of edit/add address-->
    <style name="MyTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/text_input_box_stroke</item>
        <item name="boxStrokeWidth">1dp</item>
        <!-- Hint color and label color in FALSE state -->
        <!--// for floated-->
        <item name="hintTextColor">@color/black</item>
        <!--<item name="android:textSize">20sp</item>-->
    </style>

    <style name="MyTextInputLayoutStyle.ColorControl">
        <item name="android:textColorHint">@color/green_primary</item>
        <item name="colorControlNormal">@color/green_primary</item>
        <item name="colorControlActivated">@color/green_primary</item>
    </style>

<!--    font for all numbers-->
    <style name="MyNumberFontFamily">
        <item name="fontFamily">@font/montserrat</item>
    </style>

<!--    not used yet-->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@color/colorBlack</item>
        <item name="android:textColorSecondary">@color/colorBlack</item>
        <item name="actionMenuTextColor">@color/colorBlack</item>
    </style>
</resources>