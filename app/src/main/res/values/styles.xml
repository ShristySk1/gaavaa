<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorGreen</item>
        <item name="colorPrimaryDark">@color/colorGreen</item>
        <item name="colorAccent">@color/colorGreen</item>
    </style>

    <style name="NavBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorGreen</item>
        <item name="colorPrimaryDark">@color/colorGray</item>
        <item name="colorAccent">@color/colorGray</item>
    </style>

    <style name="CustomTextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <!--        <item name="boxStrokeColor">@color/text_input_stroke</item>-->
        <item name="colorControlNormal">@android:color/tertiary_text_dark</item>
        <item name="colorControlActivated">@color/colorGreen</item>
        <item name="android:textColorHint">#ccc</item>
        <item name="errorTextColor">@color/colorYellow</item>
    </style>

    <style name="CustomButtonWhite" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_white_gray_border</item>
    </style>

    <style name="CustomButtonGreen" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_green</item>
    </style>

    <style name="MyTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/text_input_box_stroke</item>
        <item name="boxStrokeWidth">1dp</item>
        <!-- Hint color and label color in FALSE state -->
        <!--// for floated-->
        <item name="hintTextColor">@color/black</item>
        <!--        <item name="android:textSize">20sp</item>-->
    </style>

    <style name="MyTextInputLayoutStyle.ColorControl">
        <item name="android:textColorHint">@color/green_primary</item>
        <item name="colorControlNormal">@color/green_primary</item>
        <item name="colorControlActivated">@color/green_primary</item>
    </style>
</resources>