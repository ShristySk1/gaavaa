<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.Fragment.unused.FragmentOrderSummary">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

   <TextView
       android:id="@+id/text1"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="@string/os_text1"
       android:textAppearance="@style/TextAppearance.AppCompat.Medium"
       android:layout_marginTop="10dp"
       android:textStyle="bold"
       android:textColor="@color/colorGrayDark"
       android:layout_marginStart="@dimen/margin_start"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_below="@+id/text1"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


            <LinearLayout
                android:id="@+id/linear1"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:id="@+id/linear2"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="15dp"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/pay_title1"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Order Total"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/colorGray"
                        />

                    <TextView
                        android:id="@+id/pay_orderprice"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rs. 200"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/colorGray"
                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear3"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="10dp"
                    android:paddingHorizontal="15dp">

                    <TextView
                        android:id="@+id/pay_title3"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Delivery Fee"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/colorGray"
                        />

                    <TextView
                        android:id="@+id/pay_delivery"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Free"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/colorGreen"
                        />

                </LinearLayout>

                <ImageView
                    android:id="@+id/dotted_line"
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:layout_marginHorizontal="14dp"
                    android:src="@drawable/dotted_line"
                    android:layerType="software"/>

                <LinearLayout
                    android:id="@+id/linear4"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:paddingVertical="8dp"
                    android:paddingHorizontal="15dp">

                    <TextView
                        android:id="@+id/pay_title2"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Payment"
                        android:textStyle="normal"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/colorGrayDark"
                        />

                    <TextView
                        android:id="@+id/pay_total"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rs. 200"
                        android:textStyle="bold"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/colorGrayDark"
                        />

                </LinearLayout>

            </LinearLayout>

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/os_text2"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:layout_below="@+id/linear1"
            android:textColor="@color/colorGrayDark"
            android:layout_marginStart="@dimen/margin_start"/>

        <RelativeLayout
            android:id="@+id/layout_pay_type"
            android:orientation="horizontal"
            android:layout_below="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            android:layout_marginHorizontal="@dimen/margin_start"
            android:background="@drawable/button_lightgreen">

            <TextView
                android:id="@+id/text_pay_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/ayata"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textStyle="bold"
                android:layout_alignParentStart="true"
                android:textColor="@color/colorWhite"
                android:layout_marginStart="@dimen/margin_start"/>

            <ImageView
                android:id="@+id/image_pay_type"
                android:layout_alignParentEnd="true"
                android:layout_marginHorizontal="@dimen/margin_start"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/esewa_logo"
                />

        </RelativeLayout>

        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/os_text3"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:layout_below="@+id/layout_pay_type"
            android:textColor="@color/colorGrayDark"
            android:layout_marginStart="@dimen/margin_start"/>

        <RelativeLayout
            android:id="@+id/layout_address"
            android:orientation="horizontal"
            android:layout_below="@+id/text3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:minHeight="?actionBarSize"
            android:layout_marginHorizontal="@dimen/margin_start"
            android:background="@drawable/bluebackground_light">

            <TextView
                android:id="@+id/text_address"
                android:layout_marginVertical="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Bijuli Bazar Marg,New Baneshwor, Kathmandu"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textStyle="normal"
                android:layout_alignParentStart="true"
                android:textColor="@color/colorGrayDark"
                android:layout_marginHorizontal="@dimen/margin_start"/>

        </RelativeLayout>


    </RelativeLayout>

</ScrollView>