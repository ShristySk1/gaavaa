<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            app:layout_behavior=".utils.OverScrollBehaviour">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:fitsSystemWindows="true">

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/viewPager2"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:adjustViewBounds="true"
                    android:nestedScrollingEnabled="false"
                    android:paddingVertical="32dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.rd.PageIndicatorView
                    android:id="@+id/pageIndicatorView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="8dp"
                    app:layout_constraintBottom_toBottomOf="@+id/iv360"
                    app:layout_constraintEnd_toEndOf="@+id/viewPager2"
                    app:layout_constraintStart_toStartOf="@+id/viewPager2"
                    app:layout_constraintTop_toBottomOf="@id/viewPager2"
                    app:piv_animationType="scale"
                    app:piv_dynamicCount="true"
                    app:piv_interactiveAnimation="true"
                    app:piv_padding="12dp"
                    app:piv_radius="5dp"
                    app:piv_selectedColor="@color/colorPrimary"
                    app:piv_unselectedColor="@color/colorGrayLight"
                    app:piv_viewPager="@id/viewPager2" />

                <LinearLayout
                    android:id="@+id/linear1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/iv360">

                    <ImageView
                        android:id="@+id/thumb_image"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:clickable="true"
                        app:srcCompat="@drawable/ic_thumb_up" />

                    <TextView
                        android:id="@+id/thumb_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="783"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/colorGrayTextDark"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/thumb_desp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="added to favourites"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small" />
                </LinearLayout>


                <TextView
                    android:id="@+id/text_product_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="16dp"
                    android:text="@string/product_title"
                    android:textColor="@color/colorGrayTextDark"
                    android:textSize="20sp"
                    android:textStyle="normal|bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/linear1"
                    app:layout_constraintTop_toBottomOf="@+id/linear1" />


                <TextView
                    android:id="@+id/text_product_from"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="From Chepang"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/colorGrayTextDark"
                    app:layout_constraintStart_toStartOf="@+id/text_product_name"
                    app:layout_constraintTop_toBottomOf="@+id/text_product_name" />

                <TextView
                    android:id="@+id/text_product_newPrice"
                    style="@style/MyNumberFontFamily"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:text="@string/product_price_new"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/text_product_weight"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/text_product_weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="1000 g"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/colorStrikeThroughPrice"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toStartOf="@+id/text_product_newPrice"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/text_product_from"
                    app:layout_constraintTop_toBottomOf="@+id/text_product_from" />

                <LinearLayout
                    android:id="@+id/ll_points"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/background_grey"
                    android:backgroundTint="@color/colorYellowLightPoints"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    app:layout_constraintTop_toBottomOf="@id/text_product_weight">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        app:srcCompat="@drawable/ic_dollar"
                        app:tint="@color/colorYellowDarkPoints" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="8dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:textAlignment="textStart"
                        android:text="You will earn 70 points for purchasing this product." />
                </LinearLayout>

                <TextView
                    android:id="@+id/text_product_description_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="@string/product_detail_title"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/colorBlack"
                    app:layout_constraintStart_toStartOf="@+id/ll_availability"
                    app:layout_constraintTop_toBottomOf="@+id/ll_availability" />

                <TextView
                    android:id="@+id/text_product_description"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="63dp"
                    android:text="@string/product_description"
                    android:textAlignment="viewStart"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/text_product_description_title"
                    app:layout_constraintTop_toBottomOf="@+id/text_product_description_title"
                    app:layout_constraintVertical_bias="0.0" />


                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:text="Rs "
                    android:textColor="#000000"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    app:layout_constraintBaseline_toBaselineOf="@+id/text_product_newPrice"
                    app:layout_constraintEnd_toStartOf="@+id/text_product_newPrice" />

                <ImageView
                    android:id="@+id/iv360"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="16dp"
                    android:clickable="true"
                    android:padding="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/viewPager2"
                    app:srcCompat="@drawable/ic_360"
                    app:tint="@color/colorPrimary" />

                <RelativeLayout
                    android:id="@+id/ll_availability"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/margin_16dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/background_grey"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="8dp"
                    app:layout_constraintTop_toBottomOf="@id/ll_points">

                    <TextView
                        android:id="@+id/tvAvailability"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Availability: " />

                    <TextView
                        android:id="@+id/tvStock"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:text="IN STOCK"
                        android:textAllCaps="true"
                        android:textStyle="normal" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvAvailability"
                        android:layout_alignParentLeft="true"
                        android:layout_marginTop="4dp"
                        android:text="Order Now to ship Today" />

                    <ImageView
                        android:id="@+id/ivInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvStock"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="2dp"
                        app:srcCompat="@drawable/ic_info"
                        app:tint="@color/colorGrayDrawable" />
                </RelativeLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <Button
        android:id="@+id/btn_add_to_cart"
        style="@style/CustomButtonGreenProduct"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/add_to_cart"
        android:textColor="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
