<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.FragmentTrackMyOrder"
    android:background="#00C26A"
    android:weightSum="4"
    android:orientation="vertical"
    >

    <LinearLayout
        android:id="@+id/tmo_linear2"
        android:layout_weight="3"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/tmo_image"
            android:layout_marginHorizontal="80dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/order_track"/>

        <TextView
            android:id="@+id/tmo_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Username, your order has been successful "
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/colorWhite"
            android:layout_marginHorizontal="40dp"
            android:textAlignment="center"
            android:drawableEnd="@drawable/ic_party"
            android:drawablePadding="2dp"
            />

        <TextView
            android:id="@+id/tmo_desp"
            android:layout_marginTop="25dp"
            android:layout_marginHorizontal="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Check your order status in My Order\n about next shops information."
            android:textColor="@color/colorWhite"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            />

    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/tmo_linear1"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="15dp"
        android:paddingVertical="15dp"
        android:background="@drawable/background_white_topcurve">

        <TextView
            android:id="@+id/tmo_text1"
            android:layout_marginStart="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Preparing your order"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tmo_text2"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your order will be prepared and will come soon"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/colorGray"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/tmo_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Track My Order"
            android:background="@drawable/button_green"
            android:textColor="@color/colorWhite"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:layout_margin="5dp"/>
    </LinearLayout>

</LinearLayout>